<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.FC.TextViewName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.FC.TextViewDescription" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.FC.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/black</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.FC.MediumComponent</item>
    </style>

    <style name="Widget.FC.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:elevation">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.FC.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.FC.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>